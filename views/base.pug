doctype html
html
    head
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
            link(rel='stylesheet' href='/css/style.css')
            link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/core-js/3.25.1/minified.js')
            script(src='https://cdn.jsdelivr.net/npm/regenerator-runtime@0.13.9/runtime.min.js')
            script(src='https://unpkg.com/axios/dist/axios.min.js')
            script(defer src='/js/bundle.js')
            title Natours | #{title}

    body(data-alert=`${alert ? alert : ''}`)
        // HEADER
        include _header

        // CONTENT
        block content
            h1 This is a placeholder heading
        
        // FOOTER
        include _footer
